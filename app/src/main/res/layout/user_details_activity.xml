<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/user_detail_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/user_detailed_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="No image"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/user_detailed_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="No image"
            app:srcCompat="@mipmap/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:id="@+id/user_detailed_is_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/user_detailed_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/user_detailed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/user_detailed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/user_detailed_hobbies">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSend"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:text="Send" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>